<h1 style="color:#999"><%= "Edit <span style='color:#000'>#{@item.name.titlecase}</span>"%></h1>

<form action="/items/<%= @item.id %>/edit" method="post">
	<input id="hidden" type="hidden" name="_method" value="PATCH">

	<p><label for="name">Item Name:</label><br><input type="text" name="item[name]" id="name" value="<%= @item.name %>"> required</p>

	<p><label for="category">Category:</label><br><input type="text" name="item[category]" id="category" value="<%= @item.category %>"> required</p>

	<p><label for="brand">Brand:</label><br><input type="text" name="item[brand]" id="brand" value="<%= @item.brand %>"></p>

	<p><label for="date_purchased">Date Purchased:</label><br><input type="date" name="item[date_purchased]" id="date" placeholder="yyyy-mm-dd" value="<%= @item.date_purchased %>"></p>

	<p><label for="cost">Cost:</label><br><input type="number" name="item[cost]" id="cost" placeholder="0" value="<%= @item.cost %>"></p>

	<p><label for="source_of_purchase">Purchased From:</label><br><input type="text" name="item[source_of_purchase]" id="source_of_purchase" value="<%= @item.source_of_purchase %>"></p>

	<p><label for="room">Room:</label><br><select name="item[room_id]" type="number" id="room">
		<% @user.rooms.each do |room|%>
			<option value="<%= room.id %>" <%= "selected" if room.name == @item.room.name %>><%= room.name %></option>
		<% end %>
	</select></p>

	<p><label for="notes">Notes:</label><br><input type="text" name="item[note]" id="notes" value="<%= @item.note %>"></p>

	<input type="submit" name="Create Item" id="Create Item">
</form>

<br><br>
<a href="/items/<%= @item.id %>/delete"> Delete This Item</a>